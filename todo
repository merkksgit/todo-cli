#!/bin/bash

# Default configuration
DEFAULT_TODO_FILE="$HOME/todos.md"
CONFIG_FILE="$HOME/.todo_config"
SYNC_CONFIG_FILE="$HOME/.todo_sync_config"

# Terminal colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
GRAY='\033[0;37m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# Load configuration if exists
if [ -f "$CONFIG_FILE" ]; then
    TODO_FILE=$(cat "$CONFIG_FILE")
else
    TODO_FILE="$DEFAULT_TODO_FILE"
    echo "$TODO_FILE" > "$CONFIG_FILE"
    echo ""
    echo "Using default todo file: $TODO_FILE"
fi

# Load sync configuration if exists
SYNC_ENABLED=false
OFFLINE_MODE=false
SYNC_MODE="auto"  # auto, online, offline
if [ -f "$SYNC_CONFIG_FILE" ]; then
    source "$SYNC_CONFIG_FILE"
fi


# Cache date command detection for performance
DATE_CMD_TYPE=""
detect_date_command() {
    if [ -n "$DATE_CMD_TYPE" ]; then
        return
    fi
    
    # Test GNU date first
    if date -d "+1 day" +%Y-%m-%d >/dev/null 2>&1; then
        DATE_CMD_TYPE="gnu"
    # Test BSD date
    elif date -v+1d +%Y-%m-%d >/dev/null 2>&1; then
        DATE_CMD_TYPE="bsd"
    # Test BSD date with -j flag
    elif date -j -v+1d +%Y-%m-%d >/dev/null 2>&1; then
        DATE_CMD_TYPE="bsd_j"
    else
        DATE_CMD_TYPE="basic"
    fi
}

# Optimized date parsing using cached detection
parse_date_fast() {
    local date_str="$1"
    local result=""
    
    detect_date_command
    
    case "$date_str" in
        today)
            result=$(date +%Y-%m-%d)
            ;;
        tomorrow)
            case "$DATE_CMD_TYPE" in
                gnu)
                    result=$(date -d "+1 day" +%Y-%m-%d)
                    ;;
                bsd)
                    result=$(date -v+1d +%Y-%m-%d)
                    ;;
                bsd_j)
                    result=$(date -j -v+1d +%Y-%m-%d)
                    ;;
                *)
                    # Fallback to original logic
                    result=$(parse_date "$date_str")
                    return
                    ;;
            esac
            ;;
        *)
            # Use original parse_date for complex date parsing
            result=$(parse_date "$date_str")
            ;;
    esac
    
    echo "$result"
}

# Create todo file if it doesn't exist
create_todo_file() {
    # Create directory if it doesn't exist
    TODO_DIR=$(dirname "$TODO_FILE")
    if [ ! -d "$TODO_DIR" ]; then
        mkdir -p "$TODO_DIR"
    fi

    if [ ! -f "$TODO_FILE" ]; then
        # Create a properly formatted todo file with header
        echo "# Todo List" > "$TODO_FILE"
        echo "" >> "$TODO_FILE"
        echo ""
        echo "Todo file created at $TODO_FILE"
    fi
}

# Only create the file when needed, not at script start
if [ $# -eq 0 ] || [ "$1" = "config" ]; then
    create_todo_file
fi

# Function to display usage information
show_usage() {
    echo ""
    echo -e "${BOLD}USAGE:${NC}"
    echo "  todo \"<task description>\"       - Add a new todo item (use quotes for commands)"
    echo "  todo <task without commands>    - Add a new todo item"
    echo ""
    echo -e "${BOLD}TASK OPTIONS:${NC}"
    echo "  -p, --priority <level>          - Set priority (high, medium, low)"
    echo -e "  -d, --due <date>                - Set due date (DD-MM-YYYY, today, tomorrow)"
    echo "  -c, --category <category>       - Add a category tag"
    echo ""
    echo -e "${BOLD}COMMANDS:${NC}"
    echo "  todo list                       - List all todo items"
    echo "  todo done <number>              - Mark a todo as completed"
    echo "  todo undo <number>              - Mark a completed todo as not done"
    echo "  todo remove <number>            - Remove a todo item"
    echo "  todo clear                      - Remove all completed tasks"
    echo "  todo edit <number>              - Edit an existing todo item"
    echo "  todo search <term>              - Search for todos containing term"
    echo "  todo stats                      - Show todo statistics"
    echo "  todo config <path>              - Set the location of the todo file"
    echo "  todo sync-setup                 - Configure server sync settings"
    echo "  todo sync                       - Sync with server (bi-directional)"
    echo "  todo sync-up                    - Upload todos to server"
    echo "  todo sync-down                  - Download todos from server"
    echo "  todo offline                    - Switch to offline mode (disable sync)"
    echo "  todo online                     - Switch to online mode (enable sync)"
    echo "  todo status                     - Show current sync mode and configuration"
    echo "  todo help                       - Show this help message"
}

# Function to check if a value exists in an array
in_array() {
    local value="$1"
    shift
    for item; do
        [[ "$item" == "$value" ]] && return 0
    done
    return 1
}

# Function to parse a date string into YYYY-MM-DD format (internal storage)
parse_date() {
    local date_str="$1"
    local result=""

    case "$date_str" in
        today)
            result=$(date +%Y-%m-%d)
            ;;
        tomorrow)
            # Try GNU date first
            result=$(date -d "+1 day" +%Y-%m-%d 2>/dev/null)

            # If GNU date failed, try BSD date (macOS)
            if [ -z "$result" ]; then
                result=$(date -v+1d +%Y-%m-%d 2>/dev/null)
            fi

            # If that failed too, try another BSD date format
            if [ -z "$result" ]; then
                result=$(date -j -v+1d +%Y-%m-%d 2>/dev/null)
            fi
            ;;
        *)
            # Check if it's already in DD-MM-YYYY format
            if [[ "$date_str" =~ ^[0-9]{2}-[0-9]{2}-[0-9]{4}$ ]]; then
                # Convert to YYYY-MM-DD for storage
                day=${date_str:0:2}
                month=${date_str:3:2}
                year=${date_str:6:4}
                result="$year-$month-$day"
            # Check if it's in YYYY-MM-DD format
            elif [[ "$date_str" =~ ^[0-9]{4}-[0-9]{2}-[0-9]{2}$ ]]; then
                result="$date_str"
            else
                # Try to parse using GNU date
                result=$(date -d "$date_str" +%Y-%m-%d 2>/dev/null)

                # If that failed, try BSD date
                if [ -z "$result" ]; then
                    result=$(date -j -f "%d-%m-%Y" "$date_str" +%Y-%m-%d 2>/dev/null)
                fi

                # If all else fails
                if [ -z "$result" ]; then
                    echo "Invalid date format. Please use DD-MM-YYYY, today, or tomorrow."
                    exit 1
                fi
            fi
            ;;
    esac

    echo "$result"
}

# Cache for date calculations
CACHED_TODAY=""
CACHED_TOMORROW=""


# Function to format date display (make it friendly, use European format)
format_date_display() {
    local date_str="$1"
    
    # Cache today and tomorrow calculations
    if [ -z "$CACHED_TODAY" ]; then
        CACHED_TODAY=$(date +%Y-%m-%d)
        
        detect_date_command
        case "$DATE_CMD_TYPE" in
            gnu)
                CACHED_TOMORROW=$(date -d "+1 day" +%Y-%m-%d)
                ;;
            bsd)
                CACHED_TOMORROW=$(date -v+1d +%Y-%m-%d)
                ;;
            bsd_j)
                CACHED_TOMORROW=$(date -j -v+1d +%Y-%m-%d)
                ;;
            *)
                # Fallback - calculate tomorrow manually
                CACHED_TOMORROW=$(date -d "+1 day" +%Y-%m-%d 2>/dev/null || date -v+1d +%Y-%m-%d 2>/dev/null || date -j -v+1d +%Y-%m-%d 2>/dev/null)
                ;;
        esac
    fi

    case "$date_str" in
        "$CACHED_TODAY")
            echo "Today"
            ;;
        "$CACHED_TOMORROW")
            echo "Tomorrow"
            ;;
        *)
            # Convert YYYY-MM-DD to DD-MM-YYYY using bash string operations
            if [[ "$date_str" =~ ^[0-9]{4}-[0-9]{2}-[0-9]{2}$ ]]; then
                year=${date_str:0:4}
                month=${date_str:5:2}
                day=${date_str:8:2}
                echo "$day-$month-$year"
            else
                echo "$date_str"
            fi
            ;;
    esac
}

# Function to display a todo item with formatting
format_todo_display() {
    local todo_line="$1"
    local num="$2"
    local status=""
    local task_color=""
    local display_text=""
    local priority_display=""
    local due_date_display=""
    local category_display=""
    local metadata=""
    local date_raw=""
    local date_display=""
    local cat_name=""

    # Check if it's completed
    if [[ "$todo_line" == *"- [x]"* ]]; then
        status="${GREEN}✓${NC}"
        task_color="${GRAY}"
    else
        status=" "
        task_color="${NC}"
    fi

    # Extract the task text (everything after the checkbox)
    display_text="${todo_line#*]} "

    # Handle priority if present using bash string operations
    if [[ "$display_text" == *"(high)"* ]] || [[ "$display_text" == *"(High)"* ]]; then
        priority_display="${RED}HIGH${NC}"
        display_text=${display_text//(high)/}
        display_text=${display_text//(High)/}
    elif [[ "$display_text" == *"(medium)"* ]] || [[ "$display_text" == *"(Medium)"* ]]; then
        priority_display="${YELLOW}MEDIUM${NC}"
        display_text=${display_text//(medium)/}
        display_text=${display_text//(Medium)/}
    elif [[ "$display_text" == *"(low)"* ]] || [[ "$display_text" == *"(Low)"* ]]; then
        priority_display="${BLUE}LOW${NC}"
        display_text=${display_text//(low)/}
        display_text=${display_text//(Low)/}
    fi

    # Handle due date if present using bash string operations
    if [[ "$display_text" == *"(due:"* ]]; then
        # Extract date using bash pattern matching
        temp="${display_text#*(due: }"
        date_raw="${temp%%)*}"
        date_display=$(format_date_display "$date_raw")
        due_date_display="${PURPLE}DUE: $date_display${NC}"
        # Remove the due date part
        display_text="${display_text//(due: $date_raw)/}"
    fi

    # Handle category if present using bash string operations
    if [[ "$display_text" == *"#"* ]]; then
        # Extract category using bash pattern matching
        temp="${display_text#*#}"
        cat_name="${temp%% *}"
        # Remove any trailing characters that aren't part of category
        cat_name="${cat_name//[^a-zA-Z0-9_-]/}"
        if [ -n "$cat_name" ]; then
            category_display="${CYAN}#${cat_name}${NC}"
            display_text="${display_text//#$cat_name/}"
        fi
    fi

    # Clean up extra spaces using bash operations
    # Replace multiple spaces with single space
    while [[ "$display_text" == *"  "* ]]; do
        display_text="${display_text//  / }"
    done
    # Trim leading and trailing spaces
    display_text="${display_text# }"
    display_text="${display_text% }"

    # Print the todo in a single line
    printf "${BOLD}%2d${NC} [${status}] ${task_color}%-40s${NC}" "$num" "$display_text"

    # Create metadata string with commas
    if [ -n "$priority_display" ]; then
        metadata="${priority_display}"
    fi

    if [ -n "$due_date_display" ]; then
        if [ -n "$metadata" ]; then
            metadata="${metadata}, ${due_date_display}"
        else
            metadata="${due_date_display}"
        fi
    fi

    if [ -n "$category_display" ]; then
        if [ -n "$metadata" ]; then
            metadata="${metadata}, ${category_display}"
        else
            metadata="${category_display}"
        fi
    fi

    # Print metadata if any exists
    if [ -n "$metadata" ]; then
        printf " %b" "$metadata"
    fi

    # End the line
    printf "\n"
}

# Sync utility functions
is_sync_enabled() {
    # No sync if no config file exists
    [ -f "$SYNC_CONFIG_FILE" ] || return 1
    
    # Check sync mode preference
    [ "$SYNC_ENABLED" = "true" ] && [ "$SYNC_MODE" != "offline" ] && [ "$OFFLINE_MODE" != "true" ] && command -v rsync >/dev/null 2>&1
}

sync_to_server() {
    if ! is_sync_enabled; then
        return 1
    fi

    if [ -z "$SERVER_HOST" ] || [ -z "$SERVER_USER" ] || [ -z "$SERVER_PATH" ] || [ -z "$SSH_KEY_PATH" ]; then
        echo "Error: Incomplete sync configuration. Run 'todo sync-setup' first."
        return 1
    fi

    echo "Syncing to server..."
    # Expand tilde in SSH key path
    ssh_key_expanded=$(eval echo "$SSH_KEY_PATH")

    # Capture rsync output and error code
    rsync_output=$(rsync -avz --mkpath -e "ssh -i \"$ssh_key_expanded\"" "$TODO_FILE" "$SERVER_USER@$SERVER_HOST:$SERVER_PATH" 2>&1)
    rsync_exit_code=$?

    if [ $rsync_exit_code -eq 0 ]; then
        echo "✓ Synced to server"
        return 0
    else
        echo "✗ Sync failed: $rsync_output"
        return 1
    fi
}

sync_from_server() {
    if ! is_sync_enabled; then
        return 1
    fi

    if [ -z "$SERVER_HOST" ] || [ -z "$SERVER_USER" ] || [ -z "$SERVER_PATH" ] || [ -z "$SSH_KEY_PATH" ]; then
        echo "Error: Incomplete sync configuration. Run 'todo sync-setup' first."
        return 1
    fi

    echo "Syncing from server..."
    # Expand tilde in SSH key path
    ssh_key_expanded=$(eval echo "$SSH_KEY_PATH")

    # Capture rsync output and error code
    rsync_output=$(rsync -avz -e "ssh -i \"$ssh_key_expanded\"" "$SERVER_USER@$SERVER_HOST:$SERVER_PATH" "$TODO_FILE" 2>&1)
    rsync_exit_code=$?

    if [ $rsync_exit_code -eq 0 ]; then
        echo "✓ Synced from server"
        return 0
    else
        echo "✗ Sync from server failed: $rsync_output"
        return 1
    fi
}

try_auto_sync() {
    if is_sync_enabled && [ "$AUTO_SYNC" = "true" ]; then
        sync_to_server >/dev/null 2>&1
    fi
}

# Get file modification timestamp
get_local_timestamp() {
    if [ -f "$TODO_FILE" ]; then
        stat -c %Y "$TODO_FILE" 2>/dev/null || stat -f %m "$TODO_FILE" 2>/dev/null || echo "0"
    else
        echo "0"
    fi
}

get_remote_timestamp() {
    if ! is_sync_enabled; then
        echo "0"
        return
    fi

    if [ -z "$SERVER_HOST" ] || [ -z "$SERVER_USER" ] || [ -z "$SERVER_PATH" ] || [ -z "$SSH_KEY_PATH" ]; then
        echo "0"
        return
    fi

    ssh_key_expanded=$(eval echo "$SSH_KEY_PATH")
    # Use short timeout for faster failure when server is unreachable
    local result=$(timeout 2 ssh -i "$ssh_key_expanded" -o ConnectTimeout=2 -o BatchMode=yes -o StrictHostKeyChecking=no "$SERVER_USER@$SERVER_HOST" "if [ -f '$SERVER_PATH' ]; then stat -c %Y '$SERVER_PATH' 2>/dev/null || stat -f %m '$SERVER_PATH' 2>/dev/null; else echo '0'; fi" 2>/dev/null)
    
    if [ -n "$result" ] && [ "$result" != "0" ]; then
        echo "$result"
    else
        echo "0"
    fi
}

# Smart sync that only pulls if server is newer, and pushes if local is newer
smart_sync() {
    if ! is_sync_enabled || [ "$AUTO_SYNC" != "true" ]; then
        return 0
    fi

    local_timestamp=$(get_local_timestamp)
    remote_timestamp=$(get_remote_timestamp)

    # If remote is newer than local, sync down
    if [ "$remote_timestamp" -gt "$local_timestamp" ]; then
        sync_from_server >/dev/null 2>&1
    # If local is newer than remote, sync up
    elif [ "$local_timestamp" -gt "$remote_timestamp" ]; then
        sync_to_server >/dev/null 2>&1
    fi
}

# Function to show statistics about todos
show_stats() {
    echo ""
    echo -e "${BOLD}Todo Statistics${NC}"
    echo ""

    # Count total todos
    local total=$(grep -c -- "- \[" "$TODO_FILE")

    # Count completed todos
    local completed=$(grep -c -- "- \[x\]" "$TODO_FILE")

    # Calculate pending todos
    local pending=$((total - completed))

    # Calculate completion percentage
    local percentage=0
    if [ $total -gt 0 ]; then
        percentage=$((completed * 100 / total))
    fi

    # Count todos by priority
    local high=$(grep -c -i -- "(high)" "$TODO_FILE")
    local medium=$(grep -c -i -- "(medium)" "$TODO_FILE")
    local low=$(grep -c -i -- "(low)" "$TODO_FILE")

    # Count todos with due dates
    local with_due=$(grep -c -- "(due:" "$TODO_FILE")

    # Count todos by category
    local categories=$(grep -o -E "#[a-zA-Z0-9_-]+" "$TODO_FILE" | sort | uniq)

    # Print statistics
    echo -e "${BOLD}Summary:${NC}"
    echo -e "  Total: ${BOLD}$total${NC}, Completed: ${GREEN}$completed${NC}, Pending: ${YELLOW}$pending${NC}, Progress: ${CYAN}$percentage%${NC}"
    echo ""

    echo -e "${BOLD}By Priority:${NC}"
    echo -e "${GREEN}Completed: $completed${NC}, ${YELLOW}Pending: $pending${NC}, ${RED}High: $high${NC}, ${YELLOW}Medium: $medium${NC}, ${BLUE}Low: $low${NC}"
    echo ""

    echo -e "${BOLD}Due Dates:${NC}"
    echo -e "  Tasks with due dates: ${PURPLE}$with_due${NC}"
    echo ""

    if [ -n "$categories" ]; then
        echo -e "${BOLD}Categories:${NC}"
        while IFS= read -r category; do
            local cat_name="${category#\#}"
            local cat_count=$(grep -c -- "$category" "$TODO_FILE")
            echo -e "  ${CYAN}#$cat_name${NC}: $cat_count"
        done <<< "$categories"
    fi
}

# Reserved commands that can't be used in todo descriptions without quotes
COMMANDS=("list" "done" "undo" "remove" "clear" "edit" "config" "help" "search" "stats" "sync" "sync-up" "sync-down" "sync-setup" "offline" "online" "status")

# Handle commands
if [ $# -eq 0 ]; then
    # No arguments provided, show usage
    show_usage
elif in_array "$1" "${COMMANDS[@]}" && { [ $# -eq 1 ] || [ "$1" = "list" ] || [ "$1" = "clear" ] || [ "$1" = "help" ] || [ "$1" = "stats" ] || [ "$1" = "sync" ] || [ "$1" = "sync-up" ] || [ "$1" = "sync-down" ] || [ "$1" = "sync-setup" ] || [ "$1" = "offline" ] || [ "$1" = "online" ] || [ "$1" = "status" ] || { [ "$1" = "search" ] && [ $# -ge 2 ]; } || { [ "$1" = "done" ] && [ $# -eq 2 ]; } || { [ "$1" = "undo" ] && [ $# -eq 2 ]; } || { [ "$1" = "remove" ] && [ $# -eq 2 ]; } || { [ "$1" = "edit" ] && [ $# -ge 2 ]; } || { [ "$1" = "config" ] && [ $# -le 2 ]; }; }; then
    # This is a command with correct number of arguments
    if [ "$1" = "list" ]; then
        # Smart sync: pull if server newer, push if local newer
        smart_sync

        # List all todos with line numbers
        echo ""
        echo -e "${BOLD}# Todo List${NC}"
        echo ""

        # Use awk for efficient single-pass processing
        awk '
        /^- \[[x ]\]/ {
            todos[++count] = $0
            if (/^- \[x\]/) completed++
        }
        END {
            if (count > 0) {
                for (i = 1; i <= count; i++) {
                    printf "TODOITEM:%d:%s\n", i, todos[i]
                }
                printf "STATS:%d:%d:%d\n", count, completed, (count - completed)
            } else {
                print "NOTODOS"
            }
        }
        ' "$TODO_FILE" | while IFS=':' read -r type num content rest; do
            if [ "$type" = "TODOITEM" ]; then
                format_todo_display "$content" "$num"
            elif [ "$type" = "STATS" ]; then
                echo ""
                total="$num"
                completed="$content"
                pending="$rest"
                echo -e "${GRAY}Total: $total | ${GREEN}Done: $completed${NC} | ${YELLOW}Pending: $pending${NC}${GRAY}${NC}"
            elif [ "$type" = "NOTODOS" ]; then
                echo -e "${YELLOW}No todos found. Add one with:${NC} todo \"Your task\""
            fi
        done
    elif [ "$1" = "done" ]; then
        # Mark a todo as done
        if [ -z "$2" ]; then
            echo ""
            echo -e "${RED}Error: Please specify the number of the todo to mark as done.${NC}"
            echo "Usage: todo done <number>"
            exit 1
        fi

        # Get the line numbers of all todos using awk for efficiency
        line_nums=$(awk '/^- \[[x ]\]/ { print NR }' "$TODO_FILE")

        # Convert displayed number to actual line number
        todo_num=1
        actual_line=""

        while IFS= read -r line_num; do
            if [ "$todo_num" -eq "$2" ]; then
                actual_line="$line_num"
                break
            fi
            todo_num=$((todo_num+1))
        done <<< "$line_nums"

        if [ -z "$actual_line" ]; then
            echo ""
            echo -e "${RED}Error: Todo #$2 does not exist.${NC}"
            exit 1
        fi

        # Get the current content of the line
        current_line=$(sed -n "${actual_line}p" "$TODO_FILE")

        # Check if it's already done
        if [[ "$current_line" == *"- [x]"* ]]; then
            echo ""
            echo -e "${YELLOW}Todo #$2 is already marked as done.${NC}"
            exit 1
        fi

        # Replace [ ] with [x] using a safer approach
        # Use awk instead of sed to avoid delimiter conflicts
        awk -v line_num="$actual_line" '
        NR == line_num {
            gsub(/- \[ \]/, "- [x]")
        }
        { print }
        ' "$TODO_FILE" > "$TODO_FILE.tmp"

        # Check if the temp file has content before replacing
        if [ -s "$TODO_FILE.tmp" ]; then
            mv "$TODO_FILE.tmp" "$TODO_FILE"
            echo ""
            echo -e "${GREEN}Marked todo #$2 as done!${NC}"
            # Display the marked todo
            new_line=$(sed -n "${actual_line}p" "$TODO_FILE")
            format_todo_display "$new_line" "$2"
            try_auto_sync
        else
            echo ""
            echo -e "${RED}Error: Something went wrong while updating the file.${NC}"
            rm -f "$TODO_FILE.tmp"
            exit 1
        fi
    elif [ "$1" = "undo" ]; then
        # Mark a completed todo as not done
        if [ -z "$2" ]; then
            echo ""
            echo -e "${RED}Error: Please specify the number of the todo to undo.${NC}"
            echo "Usage: todo undo <number>"
            exit 1
        fi

        # Get the line numbers of all todos using awk for efficiency
        line_nums=$(awk '/^- \[[x ]\]/ { print NR }' "$TODO_FILE")

        # Convert displayed number to actual line number
        todo_num=1
        actual_line=""

        while IFS= read -r line_num; do
            if [ "$todo_num" -eq "$2" ]; then
                actual_line="$line_num"
                break
            fi
            todo_num=$((todo_num+1))
        done <<< "$line_nums"

        if [ -z "$actual_line" ]; then
            echo ""
            echo -e "${RED}Error: Todo #$2 does not exist.${NC}"
            exit 1
        fi

        # Get the current content of the line
        current_line=$(sed -n "${actual_line}p" "$TODO_FILE")

        # Check if it's not done yet
        if [[ "$current_line" != *"- [x]"* ]]; then
            echo ""
            echo -e "${YELLOW}Todo #$2 is not marked as done.${NC}"
            exit 1
        fi

        # Replace [x] with [ ] using awk to avoid delimiter conflicts
        awk -v line_num="$actual_line" '
        NR == line_num {
            gsub(/- \[x\]/, "- [ ]")
        }
        { print }
        ' "$TODO_FILE" > "$TODO_FILE.tmp"

        # Check if the temp file has content before replacing
        if [ -s "$TODO_FILE.tmp" ]; then
            mv "$TODO_FILE.tmp" "$TODO_FILE"
            echo ""
            echo -e "${BLUE}Marked todo #$2 as not done.${NC}"
            # Display the unmarked todo
            new_line=$(sed -n "${actual_line}p" "$TODO_FILE")
            format_todo_display "$new_line" "$2"
            try_auto_sync
        else
            echo ""
            echo -e "${RED}Error: Something went wrong while updating the file.${NC}"
            rm -f "$TODO_FILE.tmp"
            exit 1
        fi
    elif [ "$1" = "remove" ]; then
        # Remove a todo item
        if [ -z "$2" ]; then
            echo ""
            echo -e "${RED}Error: Please specify the number of the todo to remove.${NC}"
            echo "Usage: todo remove <number>"
            exit 1
        fi

        # Get the line numbers of all todos using awk for efficiency
        line_nums=$(awk '/^- \[[x ]\]/ { print NR }' "$TODO_FILE")

        # Check if there are any todos
        if [ -z "$line_nums" ]; then
            echo ""
            echo -e "${RED}Error: No todos found in the file.${NC}"
            exit 1
        fi

        # Convert displayed number to actual line number
        todo_num=1
        actual_line=""

        while IFS= read -r line_num; do
            if [ "$todo_num" -eq "$2" ]; then
                actual_line="$line_num"
                break
            fi
            todo_num=$((todo_num+1))
        done <<< "$line_nums"

        if [ -z "$actual_line" ]; then
            echo ""
            echo -e "${RED}Error: Todo #$2 does not exist.${NC}"
            exit 1
        fi

        # Get the task that will be removed
        task=$(sed -n "${actual_line}p" "$TODO_FILE")

        # Delete the specified line
        sed "${actual_line}d" "$TODO_FILE" > "$TODO_FILE.tmp"

        # Check if the temp file has content
        # Even if the file is now empty except for the header, that's ok
        if [ -f "$TODO_FILE.tmp" ]; then
            # If there are no remaining todos, make sure the header is preserved
            if ! grep -q -- "- \[" "$TODO_FILE.tmp"; then
                # Check if the file at least has the header
                if ! grep -q "# Todo List" "$TODO_FILE.tmp"; then
                    # Recreate the header
                    echo "# Todo List" > "$TODO_FILE"
                    echo "" >> "$TODO_FILE"
                else
                    # Just use the file as is (it has the header already)
                    mv "$TODO_FILE.tmp" "$TODO_FILE"
                fi
            else
                # There are still todos, use the modified file
                mv "$TODO_FILE.tmp" "$TODO_FILE"
            fi
            echo ""
            echo -e "${YELLOW}Removed todo:${NC} ${task#*]} "
            try_auto_sync
        else
            echo ""
            echo -e "${RED}Error: Something went wrong while updating the file.${NC}"
            [ -f "$TODO_FILE.tmp" ] && rm "$TODO_FILE.tmp"
            exit 1
        fi
    elif [ "$1" = "clear" ]; then
        # Remove all completed tasks
        # Make a backup of the file
        cp "$TODO_FILE" "${TODO_FILE}.bak"

        # Count completed tasks before removing
        completed_count=$(grep -c -- "- \[x\]" "$TODO_FILE")

        if [ "$completed_count" -eq 0 ]; then
            echo ""
            echo -e "${YELLOW}No completed tasks to clear.${NC}"
            exit 0
        fi

        # Remove all lines with "[x]"
        grep -v -- "- \[x\]" "$TODO_FILE" > "${TODO_FILE}.tmp"

        # Check if the temp file has content before replacing
        if [ -s "${TODO_FILE}.tmp" ]; then
            mv "${TODO_FILE}.tmp" "$TODO_FILE"
            echo ""
            echo -e "${GREEN}Cleared $completed_count completed tasks!${NC}"
            try_auto_sync
        else
            echo ""
            echo -e "${YELLOW}Warning: All tasks were marked as completed. File remains unchanged.${NC}"
            rm "${TODO_FILE}.tmp"
        fi
    elif [ "$1" = "edit" ]; then
        # Edit an existing todo
        if [ -z "$2" ]; then
            echo ""
            echo -e "${RED}Error: Please specify the number of the todo to edit.${NC}"
            echo "Usage: todo edit <number> [new description]"
            exit 1
        fi

        # Get the line numbers of all todos using awk for efficiency
        line_nums=$(awk '/^- \[[x ]\]/ { print NR }' "$TODO_FILE")

        # Convert displayed number to actual line number
        todo_num=1
        actual_line=""

        while IFS= read -r line_num; do
            if [ "$todo_num" -eq "$2" ]; then
                actual_line="$line_num"
                break
            fi
            todo_num=$((todo_num+1))
        done <<< "$line_nums"

        if [ -z "$actual_line" ]; then
            echo ""
            echo -e "${RED}Error: Todo #$2 does not exist.${NC}"
            exit 1
        fi

        # Get the current content of the line
        current_line=$(sed -n "${actual_line}p" "$TODO_FILE")

        if [ -z "$3" ]; then
            # No new description provided, prompt the user
            old_description=${current_line#*]} 
            # Trim potential leading space
            old_description="${old_description# }"
            echo ""
            echo -e "Current task: ${CYAN}$old_description${NC}"
            echo -n "New description: "
            read -r new_description

            # If user just pressed Enter, keep the old description
            if [ -z "$new_description" ]; then
                new_description="$old_description"
                echo ""
                echo -e "${YELLOW}No changes made to todo #$2.${NC}"
                exit 0
            fi
        else
            # Combine all arguments after the line number into a single task description
            shift 2
            new_description=""
            for arg in "$@"; do
                new_description="$new_description $arg"
            done
            new_description="${new_description:1}"
        fi

        # Check if it's a completed task
        if [[ "$current_line" == *"- [x]"* ]]; then
            checkbox="- [x]"
        else
            checkbox="- [ ]"
        fi

        # Create the new line
        new_line="$checkbox $new_description"

        # Use awk to avoid sed delimiter issues
        awk -v line_num="$actual_line" -v new_content="$new_line" '
        NR == line_num { print new_content; next }
        { print }
        ' "$TODO_FILE" > "$TODO_FILE.tmp"

        # Check if the temp file has content before replacing
        if [ -s "$TODO_FILE.tmp" ]; then
            mv "$TODO_FILE.tmp" "$TODO_FILE"
            echo ""
            echo -e "${GREEN}Updated todo #$2!${NC}"
            # Display the updated todo
            format_todo_display "$new_line" "$2"
            try_auto_sync
        else
            echo ""
            echo -e "${RED}Error: Something went wrong while updating the file.${NC}"
            rm -f "$TODO_FILE.tmp"
            exit 1
        fi
    elif [ "$1" = "config" ]; then
        # Set the todo file location
        if [ -z "$2" ]; then
            echo ""
            echo -e "Current todo file: ${CYAN}$TODO_FILE${NC}"
            echo "Usage: todo config <path>"
            exit 0
        fi

        # Update the configuration
        NEW_TODO_FILE=$(eval echo "$2")

        # Check if path is a directory, add a default filename if it is
        if [ -d "$NEW_TODO_FILE" ]; then
            NEW_TODO_FILE="${NEW_TODO_FILE%/}/todos.md"
            echo ""
            echo -e "${YELLOW}Notice: Path is a directory. Using $NEW_TODO_FILE as the todo file.${NC}"
        fi

        # Store the new path in config
        echo "$NEW_TODO_FILE" > "$CONFIG_FILE"

        # Update current variable
        TODO_FILE="$NEW_TODO_FILE"

        # Create file if needed
        create_todo_file

        echo ""
        echo -e "${GREEN}Todo file location updated to:${NC} $TODO_FILE"
    elif [ "$1" = "help" ]; then
        # Show help
        show_usage
    elif [ "$1" = "search" ]; then
        # Search for todos containing a specific term
        if [ -z "$2" ]; then
            echo ""
            echo -e "${RED}Error: Please specify a search term.${NC}"
            echo "Usage: todo search <term>"
            exit 1
        fi

        # Shift to get all search terms
        shift
        search_term="$*"

        echo ""
        echo -e "${BOLD}Search results for:${NC} ${CYAN}$search_term${NC}"
        echo ""

        # Get all todo lines that match the search term
        matching_lines=$(grep -n -i -- "$search_term" "$TODO_FILE" | grep -- "- \[" | cut -d: -f1)

        # Counter for displayed numbers
        display_num=1
        found=0

        # Read the file line by line
        while IFS= read -r line_num; do
            todo_line=$(sed -n "${line_num}p" "$TODO_FILE")
            format_todo_display "$todo_line" "$display_num"
            display_num=$((display_num+1))
            found=1
        done <<< "$matching_lines"

        if [ $found -eq 0 ]; then
            echo -e "${YELLOW}No matching todos found.${NC}"
        fi
    elif [ "$1" = "stats" ]; then
        # Show statistics about todos
        show_stats
    elif [ "$1" = "sync-setup" ]; then
        # Setup sync configuration
        echo ""
        echo -e "${BOLD}Todo Sync Setup${NC}"
        echo ""

        # Get server details
        read -p "Server hostname or IP: " server_host
        read -p "Username: " server_user
        read -p "Remote path (e.g., /home/user/todos.md): " server_path
        read -p "SSH key path (default: ~/.ssh/id_rsa): " ssh_key_path

        # Use default if empty
        if [ -z "$ssh_key_path" ]; then
            ssh_key_path="~/.ssh/id_rsa"
        fi

        # Create sync config file
        cat > "$SYNC_CONFIG_FILE" << EOF
SYNC_ENABLED=true
AUTO_SYNC=true
SERVER_HOST="$server_host"
SERVER_USER="$server_user"
SERVER_PATH="$server_path"
SSH_KEY_PATH="$ssh_key_path"
EOF

        echo ""
        echo -e "${GREEN}✓ Sync configuration saved to $SYNC_CONFIG_FILE${NC}"
        echo ""
        echo "Testing connection..."

        # Test the connection
        ssh_key_expanded=$(eval echo "$ssh_key_path")
        if ssh -i "$ssh_key_expanded" "$server_user@$server_host" "mkdir -p $(dirname "$server_path")" 2>/dev/null; then
            echo -e "${GREEN}✓ Connection successful!${NC}"

            # Do initial sync
            echo ""
            echo "Performing initial sync..."
            source "$SYNC_CONFIG_FILE"
            sync_to_server
        else
            echo -e "${YELLOW}⚠ Warning: Could not connect to server. Please check your settings.${NC}"
            echo "You can test manually with: ssh $server_user@$server_host"
        fi
    elif [ "$1" = "sync" ]; then
        # Bidirectional sync
        if ! is_sync_enabled; then
            echo ""
            echo -e "${YELLOW}Sync not configured. Run 'todo sync-setup' first.${NC}"
            exit 1
        fi

        echo ""
        echo "Syncing with server..."
        sync_from_server
        sync_to_server
    elif [ "$1" = "sync-up" ]; then
        # Upload to server
        if ! is_sync_enabled; then
            echo ""
            echo -e "${YELLOW}Sync not configured. Run 'todo sync-setup' first.${NC}"
            exit 1
        fi

        echo ""
        sync_to_server
    elif [ "$1" = "sync-down" ]; then
        # Download from server
        if ! is_sync_enabled; then
            echo ""
            echo -e "${YELLOW}Sync not configured. Run 'todo sync-setup' first.${NC}"
            exit 1
        fi

        echo ""
        sync_from_server
    elif [ "$1" = "offline" ]; then
        # Switch to offline mode
        if [ ! -f "$SYNC_CONFIG_FILE" ]; then
            echo ""
            echo -e "${YELLOW}No sync configuration found. Sync is already disabled.${NC}"
            exit 0
        fi
        
        # Update sync config to set offline mode
        sed -i.bak 's/SYNC_MODE=.*/SYNC_MODE="offline"/' "$SYNC_CONFIG_FILE" 2>/dev/null || {
            # If sed failed, append SYNC_MODE
            echo 'SYNC_MODE="offline"' >> "$SYNC_CONFIG_FILE"
        }
        
        echo ""
        echo -e "${GREEN}✓ Switched to offline mode. Sync disabled.${NC}"
        echo "Use 'todo online' to re-enable sync."
    elif [ "$1" = "online" ]; then
        # Switch to online mode
        if [ ! -f "$SYNC_CONFIG_FILE" ]; then
            echo ""
            echo -e "${YELLOW}No sync configuration found. Run 'todo sync-setup' first.${NC}"
            exit 1
        fi
        
        # Update sync config to set online mode
        sed -i.bak 's/SYNC_MODE=.*/SYNC_MODE="online"/' "$SYNC_CONFIG_FILE" 2>/dev/null || {
            # If sed failed, append SYNC_MODE
            echo 'SYNC_MODE="online"' >> "$SYNC_CONFIG_FILE"
        }
        
        echo ""
        echo -e "${GREEN}✓ Switched to online mode. Sync enabled.${NC}"
        echo "Use 'todo offline' to disable sync."
    elif [ "$1" = "status" ]; then
        # Show current sync status and configuration
        echo ""
        echo -e "${BOLD}Todo CLI Status${NC}"
        echo ""
        
        # Check if sync is configured
        if [ ! -f "$SYNC_CONFIG_FILE" ]; then
            echo -e "${CYAN}Sync Mode:${NC} ${GREEN}Offline${NC} (no server configured)"
            echo -e "${CYAN}Performance:${NC} Instant (~0.01s)"
            echo ""
            echo -e "To set up server sync, run: ${BOLD}todo sync-setup${NC}"
        else
            # Load current sync configuration
            source "$SYNC_CONFIG_FILE"
            
            # Determine current mode
            if [ "$SYNC_MODE" = "offline" ]; then
                echo -e "${CYAN}Sync Mode:${NC} ${GREEN}Offline${NC}"
                echo -e "${CYAN}Performance:${NC} Instant (~0.01s)"
                echo ""
                echo -e "Server sync is disabled. Run '${BOLD}todo online${NC}' to enable."
            elif [ "$SYNC_MODE" = "online" ]; then
                echo -e "${CYAN}Sync Mode:${NC} ${YELLOW}Online${NC}"
                echo -e "${CYAN}Performance:${NC} ~2-3s (includes server sync)"
            else
                echo -e "${CYAN}Sync Mode:${NC} ${YELLOW}Auto${NC} (legacy setting)"
                echo -e "${CYAN}Performance:${NC} ~2-3s (includes server sync)"
                echo ""
                echo -e "Run '${BOLD}todo offline${NC}' or '${BOLD}todo online${NC}' to set explicit mode."
            fi
            
            echo ""
            echo -e "${BOLD}Server Configuration:${NC}"
            echo -e "${CYAN}Host:${NC} ${SERVER_HOST:-"Not set"}"
            echo -e "${CYAN}User:${NC} ${SERVER_USER:-"Not set"}" 
            echo -e "${CYAN}Path:${NC} ${SERVER_PATH:-"Not set"}"
            echo -e "${CYAN}SSH Key:${NC} ${SSH_KEY_PATH:-"Not set"}"
        fi
        
        echo ""
        echo -e "${BOLD}Todo File:${NC} $TODO_FILE"
        
        # Check if todo file exists and show basic stats
        if [ -f "$TODO_FILE" ]; then
            total=$(grep -c -- "^- \\[[x ]\\]" "$TODO_FILE" 2>/dev/null)
            [ -z "$total" ] && total=0
            completed=$(grep -c -- "^- \\[x\\]" "$TODO_FILE" 2>/dev/null)
            [ -z "$completed" ] && completed=0
            pending=$((total - completed))
            echo -e "${CYAN}Tasks:${NC} $total total, $completed completed, $pending pending"
        else
            echo -e "${CYAN}Tasks:${NC} No todo file found"
        fi
    fi
else
    # Add new todo item
    # Process arguments for any flags
    task_description=""
    priority=""
    due_date=""
    category=""

    i=1
    while [ $i -le $# ]; do
        eval arg=\${$i}

        case "$arg" in
            -p|--priority)
                i=$((i+1))
                eval priority_level=\${$i}
                if [ -z "$priority_level" ] || ! in_array "$priority_level" "high" "medium" "low"; then
                    echo ""
                    echo -e "${RED}Error: Invalid priority level. Use high, medium, or low.${NC}"
                    exit 1
                fi
                priority="(${priority_level})"
                ;;
            -d|--due)
                i=$((i+1))
                eval date_str=\${$i}
                due_date=$(parse_date_fast "$date_str")
                due_date="(due: $due_date)"
                ;;
            -c|--category)
                i=$((i+1))
                eval cat_name=\${$i}
                if [[ ! "$cat_name" =~ ^[a-zA-Z0-9_-]+$ ]]; then
                    echo ""
                    echo -e "${RED}Error: Category can only contain letters, numbers, underscores, and hyphens.${NC}"
                    exit 1
                fi
                category="#$cat_name"
                ;;
            -*)
                echo ""
                echo -e "${RED}Error: Unknown option $arg${NC}"
                show_usage
                exit 1
                ;;
            *)
                if [ -z "$task_description" ]; then
                    task_description="$arg"
                else
                    task_description="$task_description $arg"
                fi
                ;;
        esac

        i=$((i+1))
    done

    # Combine metadata with the task description
    full_description="$task_description"

    # Add priority if specified
    if [ -n "$priority" ]; then
        full_description="$full_description $priority"
    fi

    # Add due date if specified
    if [ -n "$due_date" ]; then
        full_description="$full_description $due_date"
    fi

    # Add category if specified
    if [ -n "$category" ]; then
        full_description="$full_description $category"
    fi

    # Add the new todo with checkbox to the file
    if [ -n "$full_description" ]; then
        echo "- [ ] $full_description" >> "$TODO_FILE"
        echo ""
        echo -e "${GREEN}Added todo:${NC}"

        # Display newly added todo in a simple format with metadata on the same line
        echo -ne "${BOLD}*${NC} [ ] ${task_description}"

        # Create metadata string with commas
        metadata=""
        if [ -n "$priority" ]; then
            metadata="${RED}${priority//[()]/}${NC}"
        fi

        if [ -n "$due_date" ]; then
            if [ -n "$metadata" ]; then
                metadata="${metadata}, ${PURPLE}DUE: $(echo "$due_date" | sed 's/due: //' | sed 's/[()]//g')${NC}"
            else
                metadata="${PURPLE}DUE: $(echo "$due_date" | sed 's/due: //' | sed 's/[()]//g')${NC}"
            fi
        fi

        if [ -n "$category" ]; then
            if [ -n "$metadata" ]; then
                metadata="${metadata}, ${CYAN}${category}${NC}"
            else
                metadata="${CYAN}${category}${NC}"
            fi
        fi

        # Print metadata if any exists
        if [ -n "$metadata" ]; then
            echo -e " ${metadata}"
        else
            echo ""
        fi
        try_auto_sync
    else
        echo ""
        echo -e "${RED}Error: No task description provided.${NC}"
        show_usage
        exit 1
    fi
fi
